<h2 style="text-align: center;">Search Games</h2>
<br>
<form method="GET" autocomplete="off">
    <div class="form-group">
        <label>Game Name</label>
        <input type="text" name="name" class="form-control" value="{{searchedGame}}" placeholder="Enter game name" required>     
    </div>
    <div class="form-group">
        <label>Maximum Amount of Games</label>
        <input class="form-control" type="number" name="limit" value="{{limit}}" placeholder="Max games" min="1" max="500" required/>
    </div>
    <input type="submit" value="Search" class="btn btn-primary mb-2 btn-block"/>
</form>
<hr>
{{#each games}}
    <div class="row mb-2">
        <div class="col-7">
            <h3 style="display: inline;">{{name}}</h3>
        </div>
        {{#if ../user}}
            <div class="col">
                <div class="groupSelectForm row">
                    <div class="col">
                        <select class="custom-select" id="groupSelect" data-covida-game-id="{{id}}" autocomplete="off">
                            <option selected>Choose...</option>
                            {{#each ../user.groups}}
                                <option value="{{id}}">{{{name}}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col">
                        <button class="btn btn-primary btn-block">Add to Group</button>
                    </div> 
                </div>
            </div>
        {{/if}}
    </div>
    <table class="table table-striped table-bordered">
        <tr>
            <td>Summary</td>
            <td>Followers</td>
            <td>Rating</td>
        </tr>
        <tr>
            <td>{{#if summary}}{{summary}}{{else}}N/A{{/if}}</td>
            <td>{{#if follows}}{{follows}}{{else}}N/A{{/if}}</td>
            <td>{{#if total_rating}}{{total_rating}}{{else}}N/A{{/if}}</td>
        </tr>
    </table>
    <br>
{{/each}}
{{#if isEmpty}}
    <h5 style="text-align: center;">No results found</h5>
{{/if}}