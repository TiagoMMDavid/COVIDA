<h3 style="text-align: center;">
    <div id="groupName" style="display: inline-block;">
        {{{group.name}}}
    </div>
    <button class="btn btn-outline-secondary btn-sm" type="button" data-toggle="collapse" data-target="#editGroupForm" aria-expanded="false" aria-controls="editGroupForm">
        <i class="fas fa-edit"></i>
    </button>
</h3>
<h5 style="text-align: center;" id="groupDescription">{{#if group.description}}{{{group.description}}}{{/if}}</h5>
<div class="collapse" id="editGroupForm">
    <br>
    <div class="row">
        <div class="col-sm">
            <input type="text" class="form-control mb-2" placeholder="{{{group.name}}}" maxlength="64" autocomplete="off" id="editGroupName">
        </div>
        <div class="col-sm">
            <input type="text" class="form-control mb-2" autocomplete="off" id="editGroupDescription" maxlength="256" placeholder=
                "{{#if group.description}}{{{group.description}}}
                {{else}}New Description
                {{/if}}">
        </div>
        <div class="col-sm">
            <button class="btn btn-primary btn-block mb-2" data-covida-username="{{user.username}}">Submit</button>
        </div>
    </div>
</div>
<br>
<form method="GET" autocomplete="off">
    <div class="form-row">
        <div class="col-form-label">
            <label>Limit by rating</label>
        </div>
        <div class="col-sm">
            <input type="number" class="form-control mb-2" name="min" value="{{min}}" placeholder="Minimum Rating" min="0" max="100"/>
        </div>
        <div class="col-sm">
            <input type="number" class="form-control mb-2" name="max" value="{{max}}" placeholder="Maximum Rating" min="0" max="100"/>
        </div>
        <div class="col-sm">
            <input type="submit" class="btn btn-primary btn-block mb-2" value="Submit"/>
        </div>
    </div>
</form>
<div class="table-responsive-xl">
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col" style="vertical-align: middle;">Name</td>
                <th scope="col" style="vertical-align: middle;">Rating</td>
                <th scope="col" colspan="2"><a class="btn btn-outline-secondary btn-block" type="button" href="/covida/games/search"><i class="fas fa-plus"></i></a></td>
            </tr>
        </thead>
    {{#each group.games}}
        <tr class="gameItem" data-covida-game-id={{id}}>
            <td class="gameName" style="vertical-align: middle;"><b>{{name}}</b></td>
            <td style="vertical-align: middle;">{{#if total_rating}}{{total_rating}}{{else}}N/A{{/if}}</td>
            <td><a href='{{gameDetails}}' class="btn btn-outline-primary btn-block">See game details</a></td>
            <td><button class="btn btn-danger btn-block">Delete Game</button></td>
        </tr>
    {{/each}}
    </table>
</div>

<div class="emptyMessage">
    {{#if isEmpty}}
        <h5 style="text-align: center;">No games found</h5>
    {{/if}}
</div>