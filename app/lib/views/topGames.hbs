<div>
    <div>
        {{#if messages.error}}
            <div class="alert alert-warning alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                {{messages.error}}
            </div>
        {{/if}}
    </div>
    <h2 style="text-align: center;">Top Games</h2>
    <form class="form-inline" method="GET">
        <div class="form-group mb-2">
            <label>Number of games</label>
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <input type="number" class="form-control" name="limit" value="{{limit}}" placeholder="Maximum amount of games" min="1" max="500" required/>
        </div>
        <input type="submit" value="Search" class="btn btn-primary mb-2"/>
    </form>
    <hr>
    {{#each games}}
        <h3>{{name}}</h3>
        <table class="table table-striped table-bordered">
            <tr>
                <td>Summary</td>
                <td>Followers</td>
                <td>Rating</td>
            </tr>
            <tr>
                <td>{{#if summary}}{{summary}}{{else}}N/A{{/if}}</td>
                <td>{{#if follows}}{{follows}}{{else}}N/A{{/if}}</td>
                <td>{{#if total_rating}}{{total_rating}}{{else}}N/A{{/if}}</td>
            </tr>
        </table>
        <br>
    {{/each}}
</div>